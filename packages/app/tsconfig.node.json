/* Type checking for config files */
{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    /* Modules */
    "allowImportingTsExtensions": false,

    /* Emit */
    "noEmit": false,

    /* Projects */
    "composite": true
  },
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "codegen.ts",
    "virtual-routes.config.ts",
    "cypress.config.ts",
    "cypress/support/e2e",
    "../utils/src"
  ]
}
