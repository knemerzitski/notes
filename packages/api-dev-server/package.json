{
  "name": "dev-server",
  "version": "0.0.0",
  "private": "true",
  "type": "module",
  "scripts": {
    "build:server": "esbuild src/index.ts --outfile=./out/server/index.mjs --loader:.graphql=text --bundle --platform=node --format=esm --packages=external --sourcemap",
    "build:server:w": "npm run build:server -- --watch=forever",
    "build:http": "vite-node ../api/scripts/build.ts src/handlers/mock-apollo-http-handler.ts --outfile ./out/mock-apollo-http-handler/index.cjs",
    "build": "rimraf out/* && build:server && npm run build:http",
    "start": "DEBUG=*:ERROR,*:INFO node ./out/server/index.mjs",
    "start:w": "DEBUG=*:ERROR,*:INFO nodemon ./out/server/index.mjs",
    "start:detached": "DEBUG=*:ERROR NODE_ENV=test node ./out/server/index.mjs > /dev/null 2>&1 & wait-port 127.0.0.1:4010 -t 15000",
    "stop:detached": "kill $(lsof -t -i:4010)",
    "dev": "npm run build:server:w & npm run start:w",
    "dev:test": "npm run build:server:w & NODE_ENV=test npm run start:w",
    "prettify": "prettier --write --ignore-unknown src",
    "eslint": "eslint . --max-warnings 0",
    "type-check": "tsc --noEmit",
    "lint": "npm run type-check && npm run eslint"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.454.0",
    "@aws-sdk/lib-dynamodb": "^3.454.0",
    "@types/aws-lambda": "^8.10.126",
    "@types/cors": "^2.8.16",
    "@types/ws": "^8.5.9",
    "aws-lambda": "^1.0.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "esbuild": "^0.20.2",
    "eslint-import-resolver-typescript": "^3.6.1",
    "nodemon": "^3.0.1",
    "ws": "^8.14.2"
  }
}
