{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    /* Language and Environment */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Modules */
    "baseUrl": ".",
    "moduleResolution": "Node",
    "paths": {},

    /* Emit */
    "declarationMap": true,
    "inlineSourceMap": false,
    "sourceMap": true,
    "outDir": "out"
  },
  "include": [
    "lib",
    "bin",
    "test",
    "__tests__",
    "../utils/src",
    "../api-app-shared/src",
    "../lambda-graphql/src",
    "../api-dev-server/src",
    "../api/src",
    "../collab/src",
    "scripts"
  ]
}
