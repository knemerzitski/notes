{
  "name": "dev-server",
  "version": "0.0.0",
  "private": "true",
  "scripts": {
    "lint": "eslint .",
    "build": "esbuild src/index.ts --outdir=./out --loader:.graphql=text --bundle --platform=node --packages=external --sourcemap",
    "build:watch": "npm run build -- --watch=forever",
    "start": "DEBUG=*:error node ./out/index.js",
    "start:watch": "DEBUG=mock:graphql-http:* nodemon ./out/index.js",
    "dev": "npm run build:watch & npm run start:watch",
    "build:http": "vite-node ../api/build.ts src/handlers/mock-apollo-http-handler.ts --outfile out-handlers/mock-apollo-http-handler/index.js",
    "build:connect": "vite-node ../api/build.ts src/handlers/mock-connect-handler.ts --outfile out-handlers/mock-connect-handler/index.js",
    "build:message": "vite-node ../api/build.ts src/handlers/mock-message-handler.ts --outfile out-handlers/mock-message-handler/index.js",
    "build:disconnect": "vite-node ../api/build.ts src/handlers/mock-disconnect-handler.ts --outfile out-handlers/mock-disconnect-handler/index.js",
    "build:handlers": "npm run build:http && npm run build:connect && npm run build:message &&npm run build:disconnect"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.454.0",
    "@aws-sdk/lib-dynamodb": "^3.454.0",
    "@types/aws-lambda": "^8.10.126",
    "@types/cors": "^2.8.16",
    "@types/ws": "^8.5.9",
    "aws-lambda": "^1.0.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "esbuild": "^0.20.2",
    "eslint-import-resolver-typescript": "^3.6.1",
    "nodemon": "^3.0.1",
    "ws": "^8.14.2"
  }
}
