{
  "name": "notes",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "description": "A single page note keeping app with collaborative editing capabilities powered by AWS Lambda.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/knemerzitski/notes.git"
  },
  "author": "Kevin Nemer≈æitski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/knemerzitski/notes/issues"
  },
  "homepage": "https://github.com/knemerzitski/notes#readme",
  "scripts": {
    "prepare": "husky install",
    "docker:init": "docker network ls | grep sam-api-network || docker network create sam-api-network",
    "dynamodb:start": "cd ./docker/dynamodb && docker compose up -d",
    "dynamodb:stop": "cd ./docker/dynamodb && docker compose down",
    "mongodb:start": "cd ./docker/mongodb && docker compose up -d",
    "mongodb:stop": "cd ./docker/mongodb && docker compose down",
    "mongosh": "cd ./docker/mongodb && docker compose exec -it mongod /bin/bash -c 'mongosh'",
    "mongo-express:start": "cd ./docker/mongo-express && docker compose up -d",
    "mongo-express:stop": "cd ./docker/mongo-express && docker compose down",
    "db:start": "npm run docker:init && (npm run mongodb:start & npm run dynamodb:start)",
    "db:stop": "npm run mongodb:stop & npm run dynamodb:stop",
    "api:dev": "export DEBUG=*:ERROR,*:INFO; npm run db:start && npm run -w dev-server dev",
    "api:test": "NODE_ENV=test npm run api:dev",
    "app:dev": "npm run -w app dev",
    "app:test": "NODE_ENV=test npm run app:dev",
    "dev": "npm run api:dev & npm run app:dev",
    "cypress": "npm run -w app cypress",
    "build": "npm run build --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "prettify": "npm run prettify --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "eslint": "npm run eslint --workspaces --if-present",
    "eslint:fix": "npm run eslint --workspaces --if-present -- --fix",
    "lint": "npm run lint --workspaces --if-present",
    "graphql:gen": "npm run graphql:gen --workspaces --if-present",
    "synth": "npm run -w infra synth",
    "deploy": "npm run -w infra deploy",
    "ci:step:clean": "npm run clean",
    "ci:step:build": "npm run -w api graphql:gen && npm run -w api build && npm run -w dev-server build && npm run -w app graphql:gen && npm run -w app build",
    "ci:step:lint": "npm run lint",
    "ci:step:db": "npm run db:start",
    "ci:step:test": "npm run test",
    "ci:step:synth": "npm run synth",
    "ci:step:deploy": "npm run deploy",
    "ci:test": "npm run ci:step:clean && npm run ci:step:build && npm run ci:step:lint && npm run ci:step:db && npm run ci:step:test",
    "ci:synth": "npm run ci:test && npm run ci:step:synth",
    "ci:deploy": "npm run ci:synth && npm run deploy"
  },
  "validate-branch-name": {
    "pattern": "^main$|^[\\w]+\\/[\\w]+$",
    "errorMsg": "Example valid branchname: feat/awesomeFeature"
  },
  "dependencies": {
    "@commitlint/config-conventional": "^18.4.2",
    "@commitlint/types": "^19.0.3",
    "@eslint/js": "^9.16.0",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "commitlint": "^18.4.2",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unicorn": "^56.0.0",
    "globals": "^15.12.0",
    "graphql": "npm:@knemerzitski/graphql@16.9.1",
    "husky": "^8.0.3",
    "kill-port": "^2.0.1",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.10",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.16.0",
    "validate-branch-name": "^1.3.0"
  },
  "overrides": {
    "@graphql-tools/executor-graphql-ws": "^1.3.1",
    "@graphql-tools/executor-legacy-ws": "^1.1.1"
  },
  "packageManager": "npm@10.9.1+sha512.c89530d37c4baa38afd43e76a077a84b9aa63840b986426584fd5c5a54ab0a0b21bb1595c851042b733784b0b43706d36a494b4d8ae1a086a762cb8d3f95942a"
}
