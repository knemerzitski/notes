{
  "name": "notes",
  "workspaces": [
    "api",
    "api/mock/lambda-server",
    "app"
  ],
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "prepare": "husky install",
    "db:start": "npm run -w api db:start",
    "db:stop": "npm run -w api db:stop",
    "api:dev": "npm run -w api/mock/lambda-server dev",
    "app:dev": "npm run -w app dev",
    "dev": "npm run api:dev & npm run app:dev"
  },
  "validate-branch-name": {
    "pattern": "^main$|^[\\w]+\\/\\S+$",
    "errorMsg": "Example valid branchname: feat/awesomeFeature"
  },
  "dependencies": {
    "@commitlint/config-conventional": "^18.4.2",
    "commitlint": "^18.4.2",
    "eslint": "^8.53.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "validate-branch-name": "^1.3.0"
  }
}
