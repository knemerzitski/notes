{
  "name": "infra",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "assert-aws-cdk": "vite-node ./scripts/assert-aws-cdk.ts",
    "test:unit": "vitest run -c ./vitest.config.unit.ts",
    "test:unit:w": "vitest watch -c ./vitest.config.unit.ts",
    "synth:test": "NODE_ENV=test cdk synth -a 'vite-node bin/app-test.ts' --no-staging --quiet",
    "start": "sam local start-api --warm-containers EAGER --host 127.0.0.1 -p 3000 --docker-network sam-api-network -t cdk.out/TESTINGONLYNotesStack.template.json",
    "start:detached": "sam local start-api --skip-pull-image --warm-containers EAGER --host 127.0.0.1 -p 3000 --docker-network sam-api-network -t cdk.out/TESTINGONLYNotesStack.template.json > /dev/null 2>&1 & wait-port 127.0.0.1:3000 -t 15000",
    "stop": "kill $(lsof -t -i:3000)",
    "test:int:pre": "npm run synth:test && npm run start:detached",
    "test:int:run": "vitest run -c ./vitest.config.integration.ts",
    "test:int:post": "npm run stop",
    "test:int:w": "vitest watch -c ./vitest.config.integration.ts",
    "test:int": "npm run assert-aws-cdk && (npm run test:int:pre && npm run test:int:run; npm run test:int:post)",
    "test": "npm run test:unit && (npm run assert-aws-cdk 2> /dev/null && npm run test:int || echo 'Skipped integration tests')",
    "prettify": "prettier --write --ignore-unknown bin lib test",
    "eslint": "eslint . --fix --max-warnings 0",
    "type-check": "tsc --noEmit",
    "lint": "npm run type-check && npm run eslint",
    "cdk": "NODE_ENV=production cdk",
    "synth": "NODE_ENV=production cdk synth",
    "deploy": "NODE_ENV=production cdk deploy"
  },
  "dependencies": {
    "@types/node": "^20.12.7",
    "aws-cdk": "^2.149.0",
    "aws-cdk-lib": "^2.149.0",
    "awscdk-resources-mongodbatlas": "^3.5.2",
    "constructs": "^10.0.0",
    "dotenv": "^16.4.5",
    "source-map-support": "^0.5.21",
    "ts-essentials": "^10.0.0",
    "vite-node": "^1.6.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.1.4",
    "wait-port": "^1.1.0"
  }
}
