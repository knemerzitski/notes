{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    /* Language and Environment */
    "jsx": "react-jsx",

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "bundler",

    /* Completeness */
    "skipLibCheck": true,

    /* Type Checking */
    "strictNullChecks": true,

    /* Projects */
    "composite": true,

    /* Interop Constraints */
    "allowSyntheticDefaultImports": true,
    "baseUrl": "."
  },
  "include": [
    "src",
    "cypress",
    "vite.config.ts",
    "vitest.config.ts",
    "codegen.ts",
    "cypress.config.ts",
    "virtual-routes.config.ts",
    "../utils/src"
  ],
  "exclude": ["scripts"]
}
