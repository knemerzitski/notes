{
  "name": "api",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dynamodb:start": "cd ./mock/dynamodb && docker compose up -d",
    "mongodb:start": "cd ./mock/mongodb && docker compose up -d",
    "db:start": "npm run dynamodb:start & npm run mongodb:start",
    "db:stop": "(cd ./mock/dynamodb && docker compose down) & (cd ./mock/mongodb && docker compose down)",
    "mongo-express:start": "cd ./mock/mongo-express && docker compose up -d",
    "mongo-express:stop": "cd ./mock/mongo-express && docker compose down",
    "dev": "cd ./mock/graphql-lambda-server && npm run dev"
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@aws-sdk/client-apigatewaymanagementapi": "^3.451.0",
    "@aws-sdk/client-dynamodb": "^3.451.0",
    "@aws-sdk/lib-dynamodb": "^3.451.0",
    "@types/aws-lambda": "^8.10.126",
    "@types/ws": "^8.5.9",
    "aws-cdk-lib": "^2.108.1",
    "aws-lambda": "^1.0.7",
    "constructs": "^10.3.0",
    "dotenv": "^16.3.1",
    "esbuild": "^0.19.5",
    "graphql": "^16.8.1",
    "graphql-ws": "^5.14.2",
    "mongodb": "^6.2.0",
    "mongoose": "^8.0.1",
    "nodemon": "^3.0.1",
    "ws": "^8.14.2"
  }
}
